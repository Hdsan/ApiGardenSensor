generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model plantingBed {
 id        String   @id @default(uuid())
  sensors sensor[]
}

model sensor {
  id        String   @id @default(uuid())
  bedId  String
  order     Int
  bed    plantingBed @relation(fields: [bedId], references: [id])
  type      String @default("soil_moisture")
  reads  read[]
  events event[]
}

model read {
 id        String   @id @default(uuid())
  date     DateTime @default(now())
  sensorId String
  value    Float
  sensor   sensor   @relation(fields: [sensorId], references: [id])
}

model event {
  id        String   @id @default(uuid())
  date        DateTime @default(now())
  sensorId    String?
  sensor      sensor?  @relation(fields: [sensorId], references: [id])
  type        String
  description String?
}
